   },
   
   "definitions":{
      "conf":{
         "type":"object",
         "properties":{
         
            "radio_conf":{
               "type":"object",
               	 "properties":{
				    "mode":{"type":"integer"},
				    "freq":{"type":"integer"},
				    "band":{"type":"string"}
				}
            },
            "gateway_conf":{
               "type":"object",
               	 "properties":{
				    "gateway_ID":{"type":"string"},
				    "ref_latitude":{"type":"number", "format":"float"},
				    "ref_longitude":{"type":"number", "format":"float"},
				    "wappkey_enabled":{"type":"boolean"},
				    "wappkey":{"type":"string"},
				    "raw":{"type":"boolean"},
				    "aes":{"type":"boolean"}
				}
            },
            "alert_conf":{
               "type":"object",
               	 "properties":{
				    "use_mail":{"type":"boolean"},
				    "contact_mail":{"type":"string"},
				    "mail_from":{"type":"string"},
				    "mail_server":{"type":"string"},
				    "mail_passwd":{"type":"string"},
				    "use_sms":{"type":"boolean"},
				    "pin":{"type":"string", "format":"integer"},
				    "contact_sms":{
				    	"type":"array", 
				    	"items": { "type": "string"}
				    }
				}
            },
            "cloud_conf":{
               "type":"object",
               	 "properties":{
				    "username":{"type":"string"},
				    "password":{"type":"string"},
				    "enabled":{"type":"boolean"},
				    "public":{"type":"boolean"}
				}
            }
         }
      },
      "conf-put":{
         "type":"object",
         "properties":{
		  "json":{
		     "type":"object",
		     "properties":{
         
		        "radio_conf":{
		           "type":"object",
		           	 "properties":{
						"mode":{"type":"integer"},
						"freq":{"type":"integer"}
					}
		        }
		     }
		   }
         }
      },

      "net":{
         "type":"object",
         "properties":{
            "ip":{"type":"string"},
            "dev":{"type":"string"},
            "mac":{"type":"string"}
         }
      },

      "wifi":{
         "type":"object",
         "properties":{
            "ip":{"type":"string"},
            "enabled":{"type":"boolean"},
            "ssid":{"type":"string"}
         }
      },
      
      "wifi-put":{
         "type":"object",
         "properties":{
            "enabled":{"type":"boolean"},
            "ssid":{"type":"string"},
            "password":{
            	"type":"string",
            	"description":"If your WiFi does not use a password, leave this parameter empty."
            }
         }
      },
      
      "wifi-scanning":{
         "type":"object",
         "properties":{
            "name":{"type":"string"},
            "signal":{"type":"string"},
            "security":{"type":"string"}
         }
      },
      
      "wifi-ap":{
         "type":"object",
         "properties":{
            "SSID":{"type":"string"},
            "password":{"type":"string"}
         }
      }
      
	}
}
