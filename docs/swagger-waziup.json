            ],
            "produces":[
               "application/json"
            ],
            "parameters":[
               {
                  "in":"body",
                  "name":"body",
                  "description":"Saving the configurations.",
                  "required":true,
                  "schema":{
                     "$ref":"#/definitions/conf-put"
                  }
               }
            ],
            "responses":{
               "400":{
                  "description":"Invalid input"
               },
			   "201":{
                  "description":"successful operation"
